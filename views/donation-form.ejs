            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!email) {
                showError('email', 'Please enter your email address');
                isValid = false;
            } else if (!emailRegex.test(email)) {
                showError('email', 'Please enter a valid email address');
                isValid = false;
            } else {
                clearError('email');
            }
            
            // Validate phone
            const phone = document.getElementById('phone').value.trim();
            if (!phone) {
                showError('phone', 'Please enter your phone number');
                isValid = false;
            } else {
                clearError('phone');
            }
            
            // Validate amount
            const selectedAmountBtn = document.querySelector('.amount-btn.active');
            const customAmount = document.getElementById('custom-amount-input').value;
            if (!selectedAmountBtn && !customAmount) {
                showError('amount', 'Please select or enter a donation amount');
                isValid = false;
            } else if (customAmount && parseFloat(customAmount) <= 0) {
                showError('amount', 'Amount must be greater than zero');
                isValid = false;
            } else {
                clearError('amount');
            }
            
            return isValid;
        }

        // Helper to fetch and cache allocation data
        async function fetchAllocationData() {
            try {
                // Try to fetch from local server
                const [staffRes, projectsRes] = await Promise.all([
                    fetch('https://donate.harvestcallafrica.org/staff'),
                    fetch('https://donate.harvestcallafrica.org/projects')
                ]);

                // Check for HTTP errors
                if (!staffRes.ok) throw new Error(`Staff fetch failed: ${staffRes.status}`);
                if (!projectsRes.ok) throw new Error(`Projects fetch failed: ${projectsRes.status}`);
                
                // Parse JSON
                staffMembers = await staffRes.json();
                projects = await projectsRes.json();
            } catch (err) {
                // Use mock data
                staffMembers = mockStaff;
                projects = mockProjects;
            } finally {
                // Always populate the list
                populateAllocationList(currentAllocationType);
            }
        }

        // Populate allocation list
        function populateAllocationList(type, searchTerm = '') {
            if (!allocationList) return;
            
            allocationList.innerHTML = '';
            const items = type === 'staff' ? staffMembers : projects;
            
            // Filter items based on search term
            const filteredItems = items.filter(item => 
                item.name.toLowerCase().includes((searchTerm || '').toLowerCase())
            );
            
            if (filteredItems.length > 0) {
                filteredItems.forEach(item => {
                    const option = document.createElement('div');
                    option.className = 'dropdown-option';
                    option.tabIndex = 0;
                    option.setAttribute('role', 'option');
                    
                    if (selectedAllocation && 
                        selectedAllocation.id === item.id && 
                        selectedAllocation.type === type) {
                        option.classList.add('selected');
                        option.setAttribute('aria-selected', 'true');
                    }
                    
                    option.dataset.id = item.id;
                    option.dataset.type = type;
                    option.innerHTML = `<strong>${item.name}</strong>`;
                    
                    option.addEventListener('click', () => {
                        document.querySelectorAll('.dropdown-option').forEach(o => {
                            o.classList.remove('selected');
                            o.setAttribute('aria-selected', 'false');
                        });
                        option.classList.add('selected');
                        option.setAttribute('aria-selected', 'true');
                        selectedAllocation = {
                            type: type,
                            id: item.id,
                            name: item.name
                        };
                        allocationSearch.placeholder = item.name;
                        allocationList.classList.remove('visible');
                    });
                    
                    // Add keyboard support
                    option.addEventListener('keydown', (e) => {
                        if (e.key === 'Enter' || e.key === ' ') {
                            option.click();
                        }
                    });
                    
                    allocationList.appendChild(option);
                });
            } else {
                const noResults = document.createElement('div');
                noResults.className = 'no-results';
                noResults.textContent = 'No matching items found';
                allocationList.appendChild(noResults);
            }
        }

        // Initialize allocation functionality
        function initAllocation() {
            if (!allocationBtns.length) return;
            
            // Allocation type toggle
            allocationBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    allocationBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    currentAllocationType = btn.dataset.type;
                    allocationSearch.placeholder = currentAllocationType === 'staff' 
                        ? 'Search staff...' 
                        : 'Search projects...';
                    allocationSearch.value = '';
                    populateAllocationList(currentAllocationType);
                    allocationList.classList.add('visible');
                });
                
                // Add keyboard support
                btn.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        btn.click();
                    }
                });
            });
            
            // Search functionality
            allocationSearch.addEventListener('input', () => {
                populateAllocationList(currentAllocationType, allocationSearch.value);
            });
            
            allocationSearch.addEventListener('focus', () => {
                allocationList.classList.add('visible');
                populateAllocationList(currentAllocationType, allocationSearch.value);
            });
            
            document.addEventListener('click', e => {
                if (!allocationDropdown.contains(e.target)) {
                    allocationList.classList.remove('visible');
                }
            });
        }

        // Initialize currency toggle
        function initCurrency() {
            const currencyBtns = document.querySelectorAll('.currency-btn');
            const currencySymbol = document.getElementById('currency-symbol');
            const ngnAmounts = document.querySelectorAll('.amount-btn:not(.usd-amount)');
            const usdAmounts = document.querySelectorAll('.usd-amount');
            
            currencyBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    currencyBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    const currency = btn.dataset.currency;
                    
                    if (currency === 'NGN') {
                        ngnAmounts.forEach(el => el.style.display = 'flex');
                        usdAmounts.forEach(el => el.style.display = 'none');
                        currencySymbol.textContent = '₦';
                    } else {
                        ngnAmounts.forEach(el => el.style.display = 'none');
                        usdAmounts.forEach(el => el.style.display = 'flex');
                        currencySymbol.textContent = '$';
                    }
                });
                
                // Add keyboard support
                btn.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        btn.click();
                    }
                });
            });
        }

        // Initialize donation type toggle
        function initDonationType() {
            const typeBtns = document.querySelectorAll('.type-btn');
            
            typeBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    typeBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                });
                
                // Add keyboard support
                btn.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        btn.click();
                    }
                });
            });
        }

        // Initialize amount selection
        function initAmountSelection() {
            const amountBtns = document.querySelectorAll('.amount-btn');
            const customAmountInput = document.getElementById('custom-amount-input');
            
            amountBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    amountBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    customAmountInput.value = '';
                    clearError('amount');
                });
                
                // Add keyboard support
                btn.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        btn.click();
                    }
                });
            });
            
            customAmountInput.addEventListener('focus', () => {
                amountBtns.forEach(b => b.classList.remove('active'));
                clearError('amount');
            });
        }

        // Initialize donate button with payment functionality
        function initDonateButton() {
            donateButton.addEventListener('click', async () => {
                if (!validateForm()) return;
                
                // Disable button and show loading
                donateButton.disabled = true;
                loadingIndicator.style.display = 'block';
                
                const currency = document.querySelector('.currency-btn.active')?.dataset.currency;
                const type = document.querySelector('.type-btn.active')?.dataset.type;
                const selectedAmountBtn = document.querySelector('.amount-btn.active');
                const customAmount = document.getElementById('custom-amount-input')?.value;
                
                let amount = selectedAmountBtn ? selectedAmountBtn.dataset.amount : customAmount;
                
                const name = document.getElementById('full-name')?.value;
                const email = document.getElementById('email')?.value;
                const countryCode = document.getElementById('country-code').value;
                const phoneNumber = document.getElementById('phone').value;
                const phone = countryCode + phoneNumber;
                
                // Prepare allocation data
                let staffId = null;
                let projectId = null;
                
                if (selectedAllocation) {
                    if (selectedAllocation.type === 'staff') {
                        staffId = selectedAllocation.id;
                    } else if (selectedAllocation.type === 'projects') {
                        projectId = selectedAllocation.id;
                    }
                }
                
                // Prepare payload for payment initialization
                const payload = {
                    email: email,
                    amount: parseInt(amount),
                    currency: currency,
                    metadata: {
                        donorName: name,
                        donationType: type,
                        staffId: staffId,
                        projectId: projectId,
                        phone: phone
                    }
                };
                
                try {
                    const response = await fetch(`${API_URL}/initialize-payment`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(payload)
                    });
                    
                    const data = await response.json();
                    
                    if (data.authorization_url) {
                        // Redirect to payment gateway
                        window.location.href = data.authorization_url;
                    } else {
                        showError('amount', 'Payment initialization failed. Please try again.');
                    }
                } catch (error) {
                    showError('email', 'An error occurred while processing your payment.');
                } finally {
                    // Re-enable button and hide loading
                    donateButton.disabled = false;
                    loadingIndicator.style.display = 'none';
                }
            });
        }

        // Initialize everything when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            initCurrency();
            initDonationType();
            initAmountSelection();
            initAllocation();
            initDonateButton();
            
            // Fetch allocation data
            fetchAllocationData();
            
            // Clear errors on input
            document.getElementById('full-name').addEventListener('input', () => clearError('name'));
            document.getElementById('email').addEventListener('input', () => clearError('email'));
            document.getElementById('phone').addEventListener('input', () => clearError('phone'));
            document.getElementById('custom-amount-input').addEventListener('input', () => clearError('amount'));
        });
    </script>
