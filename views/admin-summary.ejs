<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Donation Summary Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css " />
  <script src="https://cdn.jsdelivr.net/npm/chart.js "></script>
  <style nonce="<%= cspNonce %>">
    :root {
      --primary: #003366;
      --secondary: #2E7D32;
      --accent: #E67E22;
      --light-bg: #f8f9fa;
      --card-bg: #ffffff;
      --text: #333333;
      --text-light: #6c757d;
      --border: #e0e0e0;
      --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: var(--light-bg);
      color: var(--text);
      line-height: 1.6;
      padding: 20px;
    }

    .dashboard-container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .logo-container {
      display: flex;
      align-items: center;
      gap: 16px;
    }

    .logo i {
      font-size: 36px;
      color: var(--primary);
    }

    .title-container h1 {
      font-size: 24px;
      color: var(--primary);
    }

    .controls, .admin-nav {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 10px 15px;
      background-color: var(--primary);
      color: white;
      border: none;
      border-radius: 6px;
      text-decoration: none;
    }

    .btn:hover {
      background-color: #002244;
    }

    .month-nav {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 20px;
      margin-bottom: 30px;
    }

    .current-month {
      font-size: 1.2rem;
      font-weight: bold;
      color: var(--primary);
    }

    .kpi-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }

    .kpi-card {
      background: var(--card-bg);
      padding: 20px;
      border-radius: 12px;
      box-shadow: var(--shadow);
    }

    .kpi-icon i {
      font-size: 24px;
      color: var(--accent);
    }

    .kpi-card h3 {
      margin: 10px 0;
      font-size: 1.1rem;
      color: var(--primary);
    }

    .value {
      font-size: 1.6rem;
      font-weight: bold;
    }

    .sub-value {
      font-size: 0.9rem;
      color: var(--text-light);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 40px;
    }

    th, td {
      padding: 12px;
      border-bottom: 1px solid var(--border);
      text-align: left;
    }

    th {
      background-color: var(--primary);
      color: white;
    }

    @media (max-width: 768px) {
      .kpi-cards {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="dashboard-container">

    <!-- Header -->
    <div class="header">
      <div class="logo-container">
        <div class="logo"><i class="fas fa-hands-helping"></i></div>
        <div class="title-container">
          <h1>Donation Summary Dashboard</h1>
          <p>Harvest Call Ministries – Monthly Contributions Report</p>
        </div>
      </div>
      <div class="controls">
        <a href="/admin/logout" class="btn"><i class="fas fa-sign-out-alt"></i> Logout</a>
        <a href="/admin/export/summary?month=<%= title %>&format=csv" class="btn"><i class="fas fa-file-csv"></i> Export CSV</a>
        <a href="/admin/staff" class="btn"><i class="fas fa-users"></i> Staff</a>
        <a href="/admin/projects" class="btn"><i class="fas fa-project-diagram"></i> Projects</a>
        <a href="/admin/assign-projects" class="btn"><i class="fas fa-tasks"></i> Assign Projects</a>
        <a href="/admin/donations" class="btn"><i class="fas fa-list"></i> View Donations</a>
      </div>
    </div>

    <!-- Month Navigation -->
    <div class="month-nav">
      <a href="/admin/summary?month=<%= prev %>" class="btn nav-btn"><i class="fas fa-chevron-left"></i></a>
      <div class="current-month"><%= title %></div>
      <a href="/admin/summary?month=<%= next %>" class="btn nav-btn"><i class="fas fa-chevron-right"></i></a>
    </div>

    <!-- KPI Cards -->
    <div class="kpi-cards">
      <div class="kpi-card total">
        <div class="kpi-icon"><i class="fas fa-donate"></i></div>
        <h3>Total Donations</h3>
        <div class="value">₦<%= summary.total.toLocaleString() %></div>
        <div class="sub-value">All Contributions</div>
      </div>
      <div class="kpi-card staff">
        <div class="kpi-icon"><i class="fas fa-user-friends"></i></div>
        <h3>Staff Support</h3>
        <div class="value">₦<%= summary.totalStaff.toLocaleString() %></div>
        <div class="sub-value">Missionary Support</div>
      </div>
      <div class="kpi-card projects">
        <div class="kpi-icon"><i class="fas fa-project-diagram"></i></div>
        <h3>Project Funding</h3>
        <div class="value">₦<%= summary.totalProject.toLocaleString() %></div>
        <div class="sub-value">Ministry Projects</div>
      </div>
      <div class="kpi-card donors">
        <div class="kpi-icon"><i class="fas fa-users"></i></div>
        <h3>Donors</h3>
        <div class="value"><%= donorCount %></div>
        <div class="sub-value">Avg Gift: ₦<%= avgGift %></div>
      </div>
    </div>

    <!-- Recipient Table -->
    <table>
      <thead>
        <tr>
          <th>Recipient</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% Object.values(summary.records).forEach(r => { %>
          <tr>
            <td><%= r.label %></td>
            <td>₦<%= r.total.toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Footer -->
    <p style="margin-top: 30px; text-align: center;">
      Generated on <%= new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
    </p>

    <!-- Donation Chart -->
    <canvas id="donationChart" width="800" height="400"></canvas>

    <!-- Chart Script -->
    <script>
      const ctx = document.getElementById('donationChart').getContext('2d');
      const labels = Object.keys(<%- JSON.stringify(summary.records) %>).map(k => summary.records[k].label);
      const data = Object.keys(<%- JSON.stringify(summary.records) %>).map(k => summary.records[k].total);

      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [{
            label: 'Donation Amount (₦)',
            data: data,
            backgroundColor: '#2E7D32'
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: { display: false },
            tooltip: {
              callbacks: {
                label: function(context) {
                  return '₦' + parseInt(context.raw).toLocaleString();
                }
              }
            }
          },
          scales: {
            y: {
              ticks: {
                callback: function(value) {
                  return '₦' + value.toLocaleString();
                }
              }
            }
          }
        }
      });
    </script>

  </div>
</body>
</html>